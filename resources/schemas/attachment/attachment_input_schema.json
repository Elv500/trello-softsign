{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Attachment POST input (limpio)",
  "description": "Schema m√≠nimo para validar los inputs necesarios al POST /1/cards/{id}/attachments",
  "type": "object",
  "properties": {
    "pathParams": {
      "type": "object",
      "properties": {
        "id": { "type": "string" }
      },
      "required": ["id"],
      "additionalProperties": false
    },
    "query": {
      "type": "object",
      "properties": {
        "key": { "type": "string" },
        "token": { "type": "string" }
      },
      "required": ["key", "token"],
      "additionalProperties": false
    },
    "headers": {
      "type": "object",
      "properties": {
        "Accept": { "type": "string" }
      },
      "additionalProperties": true
    },
    "body": {
      "type": "object",
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "url": { "type": "string", "format": "uri" },
            "name": { "type": "string" },
            "setCover": { "type": "boolean" }
          },
          "required": ["url"],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "fileBase64": { "type": "string" },
            "name": { "type": "string" },
            "mimeType": { "type": "string" }
          },
          "required": ["fileBase64"],
          "additionalProperties": false
        }
      ]
    }
  },
  "required": ["pathParams", "query", "body"],
  "additionalProperties": false
}
